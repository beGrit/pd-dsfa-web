[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "布局方式",
        "bindControlAttr": "layout",
        "showType": "select",
        "dictionary": [
          {
            "text": "左右",
            "value": "row"
          },
          {
            "text": "右左",
            "value": "row-reverse"
          },
          {
            "text": "上下",
            "value": "column"
          },
          {
            "text": "下上",
            "value": "column-reverse"
          }
        ],
        "inCommonUse": true
      },
      {
        "text": "盒子高度",
        "bindControlAttr": "boxHeight",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "边栏宽度",
        "bindControlAttr": "barWidth",
        "showType": "text",
        "showExpress": "@[layout] === 'row' || @[layout] === 'row-reverse'",
        "inCommonUse": true
      },
      {
        "text": "边栏高度",
        "bindControlAttr": "barHeight",
        "showType": "text",
        "showExpress": "@[layout] === 'column' || @[layout] === 'column-reverse'",
        "inCommonUse": true
      },
      {
        "text": "间隙",
        "bindControlAttr": "margin",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "内边距",
        "bindControlAttr": "padding",
        "showType": "boolean",
        "inCommonUse": true
      },
      {
        "text": "隐藏折叠按钮",
        "bindControlAttr": "hiddenBt",
        "showType": "boolean",
        "inCommonUse": true
      },
      {
        "text": "是否默认折叠",
        "bindControlAttr": "isClosed",
        "showType": "boolean",
        "showExpress": "@[hiddenBt] === false",
        "inCommonUse": true
      },
      {
        "text": "是否允许拖动改变尺寸",
        "bindControlAttr": "canResize",
        "showType": "boolean",
        "showExpress": "@[hiddenBt] === false",
        "inCommonUse": true
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "动态属性绑定",
        "bindControlAttr": "development",
        "showType": "dialog",
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      }
    ]
  }
]