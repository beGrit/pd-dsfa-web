[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "是否水平滚动",
        "bindControlAttr": "horizontal",
        "showType": "boolean",
        "inCommonUse": true
      },
      {
        "text": "一行几列",
        "bindControlAttr": "columnNumber",
        "showType": "number",
        "showExpress": "@[horizontal] === false",
        "inCommonUse": true,
        "config": {
          "min": 1,
          "precision": 0
        }
      },
      {
        "text": "展示几行",
        "bindControlAttr": "columnNumber",
        "showType": "number",
        "showExpress": "@[horizontal] === true",
        "inCommonUse": true,
        "config": {
          "min": 1,
          "precision": 0
        }
      },
      {
        "text": "列宽",
        "bindControlAttr": "columnWidth",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "行高",
        "bindControlAttr": "lineHeight",
        "showExpress": "@[horizontal] === true",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "上下间隙",
        "bindControlAttr": "marginTop",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "左右间隙",
        "bindControlAttr": "marginLeft",
        "showExpress": "@[horizontal] === true",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "盒子内边距",
        "bindControlAttr": "padding",
        "showType": "multipleText",
        "inCommonUse": true,
        "config": {
          "inputs": [
            {
              "placeholder": "上"
            },
            {
              "placeholder": "右"
            },
            {
              "placeholder": "下"
            },
            {
              "placeholder": "左"
            }
          ]
        }
      },
      {
        "text": "是否带选择框",
        "bindControlAttr": "checkbox",
        "showType": "boolean",
        "inCommonUse": true
      },
      {
        "text": "数据的唯一id字段名",
        "bindControlAttr": "rowKey",
        "showType": "text",
        "inCommonUse": true
      },
      {
        "text": "请求地址",
        "bindControlAttr": "url",
        "showType": "text",
        "desc": "<p>数据也可以在“动态属性绑定”中通过 { \":data\": \"[]\" } 形式传入</p>",
        "inCommonUse": true
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "动态属性绑定",
        "bindControlAttr": "development",
        "showType": "dialog",
        "inCommonUse": true,
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      }
    ]
  }
]